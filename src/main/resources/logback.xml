<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="com.cultagent.receiver.manager" level="ALL" additivity="true">
        <appender-ref ref="STDOUT" />
    </logger>
    <!--logger name="com.cultagent.receiver.dao" level="DEBUG" additivity="true">
        <appender-ref ref="STDOUT" />
    </logger-->
    <root level="ALL">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>